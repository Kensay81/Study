def is_valid_password(password):
    result = False
    upper_case = False
    lower_case = False
    one_digit = False
    if len(password) >= 8:
        for char in password:
            if char.isdigit():
                one_digit = True
            if char.islower():
                lower_case = True
            if char.isupper():
                upper_case = True
    if upper_case and lower_case and one_digit:
        result = True
    return result
    
    